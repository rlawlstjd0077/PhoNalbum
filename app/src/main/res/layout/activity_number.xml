<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toobar"
        layout="@layout/toolbar"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/toolbar"
        android:id="@+id/relativeLayout1">
        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:background="@color/colorPrimary"/>
        <ImageView
            android:id="@+id/number_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:transitionName="@string/transition_app_icon"
            android:adjustViewBounds="true"
            android:maxHeight="50dp"
            android:maxWidth="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/number_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number"
            android:textSize="22sp"
            android:textColor="@color/md_white_1000"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/number_card"
            android:layout_centerHorizontal="true"
        />
        <TextView
            android:id="@+id/number_number"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:textSize="15sp"
            android:textColor="@color/md_white_1000"
            android:gravity="center_horizontal"
            android:layout_below="@id/number_name"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/relativeLayout2"
        >
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/app_phonebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="30dp"
                android:maxWidth="30dp"
                android:layout_marginLeft="@dimen/horizontal_margin"
                android:layout_marginStart="@dimen/horizontal_margin"
                android:layout_gravity="center_vertical"
                <!--android:src="" -->/>
            <TextView
                android:id="@+id/app_whitepages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="noResult"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/text_primary"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/horizontal_margin"
                android:layout_marginRight="@dimen/horizontal_margin" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayout2">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/call_card"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="5dp">
                <TextView
                    android:fontFamily="sans-serif-thin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="@dimen/horizontal_margin"
                    android:layout_marginStart="@dimen/horizontal_margin"
                    android:text="@string/dialog_call"
                    android:textSize="25sp"/>
                <TextView
                    android:fontFamily="sans-serif-thin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/horizontal_description_margin"
                    android:layout_marginRight="@dimen/horizontal_description_margin"
                    android:layout_marginTop="50dp"
                    android:text="@string/dialog_call_description"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:singleLine="true" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_below="@id/call_card"
                android:id="@+id/message_card"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:foreground="?android:attr/selectableItemBackground">
                <TextView
                    android:fontFamily="sans-serif-thin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="@dimen/horizontal_margin"
                    android:layout_marginStart="@dimen/horizontal_margin"
                    android:text="@string/dialog_message"
                    android:textSize="25sp" />

            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>